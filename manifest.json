{
    "name": "Vending Machine Time Tracker",
    "version": "2.0",
    "description": "",

    "permissions": ["declarativeContent", "storage", "topSites", "tabs"],

    "background": {

      "scripts": ["background.js","dataPair.js"],

      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {

        "32": "images/vendicon32.png",

        "128": "images/vendicon128.png"
      },
	  "default_title": "Vending Machine"
    },
	 "icons": {

      "32": "images/vendicon32.png",

      "128": "images/vendicon128.png"
    },

    "manifest_version": 2,
	"content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
